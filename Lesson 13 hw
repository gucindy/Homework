var amount: real
var price: real
var newprice: real
var total: real 
total:= 0
put "What is the price of the item?"..
get price
put "How many of this item do you want?"..
get amount
newprice:= price*amount
total += newprice
put "What is the price of the item?"..
get price
put "How many of this item do you want?"..
get amount
newprice:= price*amount
total += newprice
put "What is the price of the item?"..
get price
put "How many of this item do you want?"..
get amount
